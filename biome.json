{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineEnding": "auto",
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "none",
			"semicolons": "always",
			"jsxQuoteStyle": "single"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
